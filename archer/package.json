{
  "name": "root",
  "private": true,
  "scripts": {
    "format-check-only": "prettier --check \"./**/src/**/*.{ts,js,tsx,jsx,md,mdx}\"",
    "format": "prettier --write \"./**/src/**/*.{ts,js,tsx,jsx,md,mdx}\"",
    "lint": "eslint **/*.ts",
    "clean": "find . \\( -name \"node_modules\" -o -name \"dist\" -o -name \".turbo\" -o -name \".angular\" \\) -type d -exec rm -rf {} +"
  },
  "workspaces": [
    "backend",
    "angular",
    "common"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.8.1",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  }
}
